<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ControladorLogin</servlet-name>
        <servlet-class>bicicleteria.ControladorLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorLogout</servlet-name>
        <servlet-class>bicicleteria.ControladorLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorStockPiezas</servlet-name>
        <servlet-class>bicicleteria.ControladorStockPiezas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorVenta</servlet-name>
        <servlet-class>bicicleteria.ControladorVenta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorLogin</servlet-name>
        <url-pattern>/ControladorLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorLogout</servlet-name>
        <url-pattern>/ControladorLogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorStockPiezas</servlet-name>
        <url-pattern>/ControladorStockPiezas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorVenta</servlet-name>
        <url-pattern>/ControladorVenta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
